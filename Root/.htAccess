DirectoryIndex Framework/Page.php

ErrorDocument 404 "Error: 404. Page Not Found! :("

RewriteBase /
RewriteEngine On
DirectorySlash Off

RewriteRule ^(.+)/$ $1 [R=301]

RewriteRule ^style.css$ Framework/Style.php [L]
RewriteRule ^script.js$ Framework/Script.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.ico$ Resource/$1.ico [L]

RewriteCond %{DOCUMENT_ROOT}/Resource/$1 -d
RewriteRule ^(.*?)\.jpg$ Resource/$1/root.jpg [R=302,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.jpg$ Resource/$1.jpg [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.png$ Resource/$1.png [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.svg$ Resource/$1.svg [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.txt$ File/$1.txt [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.msi$ File/$1.msi [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*?)\.json$ Framework/Component.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)$ Framework/Page.php [L]
